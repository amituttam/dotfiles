!-- Xft settings -- !
!Xft.dpi:        96
!Xft.antialias:  true
!Xft.rgba:       rgb
!Xft.hinting:    true
!Xft.hintstyle:  hintslight

! Paste
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False

!urxvt.font: xft:DejaVu Sans Mono:style=condensed:pixelsize=17
URxvt*letterSpace: -2
urxvt.font: xft:Droid Sans Mono:style=Regular:pixelsize=18
!urxvt.font: xft:Monaco:style=Regular:pixelsize=14
!urxvt.font: xft:GohuFont:style=Regular
!urxvt.font: xft:Ubuntu Mono:style=Regular:pixelsize=18
! make a scrollbar that's nearly black
urxvt*scrollBar:                               false
urxvt*scrollBar_floating:                      true
urxvt*scrollBar_right:                         false
urxvt*scrollColor:                             #202020
urxvt*termName:                                xterm
urxvt*urllauncher:                             chromium
! matcher.button # 3 is a right-click
urxvt*matcher.button:                          3
urxvt*saveLines:                               8192
urxvt.perl-ext-common:                         default,matcher,clipboard,tabbed

! transparency
urxvt*depth:                                   24
urxvt*transparent:                             true
urxvt*fading:           0
urxvt*shading:          10
urxvt*tintColor:        #000000
urxvt*cursorColor:      #FD971F
urxvt*inheritPixmap:    true
urxvt*background:      rgba:2222/2222/2222/dddd

! colors
